            <TextBlock Text="{Binding Name}"/>
        </HierarchicalDataTemplate>
        <DataTemplate DataType="{x:Type viewModels:CameraViewModel}">
            <Button Content="{Binding CameraName}" Command="{Binding PlayVideoCommand}"/>
        </DataTemplate>
    </UserControl.Resources>
